<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hospital">

    <uses-permission android:name="android.permission.INTERNET"  />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Screens.AppointmentsActivity"
            android:label="Appointments" android:parentActivityName=".Screens.HomePageActivity"></activity>
        <activity
            android:name=".Screens.HomePageActivity"
            android:theme="@style/HomeTheme" />
        <activity
            android:name=".Screens.SearchDoctor"
            android:parentActivityName=".Screens.HomePageActivity" />
        <activity
            android:name=".Common.GettingStarted"
            android:theme="@style/HomeTheme" />
        <activity
            android:name=".PhoneAuth"
            android:theme="@style/HomeTheme" />
        <activity
            android:name=".Common.SplashScreen"
            android:theme="@style/HomeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>